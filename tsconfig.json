{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020",
      "dom"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "paths": {
      "@serverless-pipeline/common": [
        "src/lib/common"
      ],
      "@serverless-pipeline/bank-transactions": [
        "src/lib/packages/bank-transactions"
      ],
      "@serverless-pipeline/s3": [
        "src/lib/integrations/s3"
      ],
      "@serverless-pipeline/dynamo": [
        "src/lib/integrations/dynamodb"
      ],
      "@serverless-pipeline/lambda-decorators": [
        "src/lib/common/decorators/lambda"
      ],
      "@serverless-pipeline/dynamo-decorators": [
        "src/lib/common/decorators/dynamo"
      ],
      "@serverless-pipeline/s3-decorators": [
        "src/lib/common/decorators/s3"
      ]
    },
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}
